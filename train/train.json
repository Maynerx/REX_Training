{
  "train_micro_batch_size_per_gpu": 24,
  "contiguous_gradients": true,
  "sub_group_size": 1e8,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 1e-4,
      "betas": [0.9, 0.999],
      "eps": 1e-8
    }
  },
  "zero_force_ds_cpu_optimizer": false,
  "zero_optimization": {
    "stage": 3,
    "offload_param": {
      "device": "cpu",
      "pin_memory": true
    },
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true
    },
    "allgather_partitions": true,
    "reduce_scatter": true,
    "overlap_comm": true,

    "reduce_bucket_size": 5e7,
    "prefetch_bucket_size": 5e7,

    "stage3_max_live_parameters": 1e8,
    "stage3_max_reuse_distance": 1e8
  },
  "fp16": {
     "enabled": true,
      "loss_scale": 0,
      "initial_scale_power": 16,
      "loss_scale_window": 1000,
      "min_loss_scale": 1,
      "keep_fp32_allgather": true
    },
  "gradient_clipping": 1.0,

  "scheduler": {
    "type": "CosineAnnealing",
    "params": {
      "T_max": 10
    }
  }
}
