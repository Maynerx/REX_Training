{
  "train_batch_size": 64,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 1e-4,
      "betas": [0.9, 0.999],
      "eps": 1e-8
    }
  },
  "zero_force_ds_cpu_optimizer": false,
  "zero_optimization": {
    "stage": 3,
    "offload_param": { "device": "cpu" },
    "offload_optimizer": { "device": "cpu" },
    "overlap_comm": true
  },
  "fp16": { "enabled": true },
  "scheduler": {
    "type": "CosineAnnealing",
    "params": {
      "T_max": 10
    }
  }
}