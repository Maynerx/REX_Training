{
  "train_micro_batch_size_per_gpu": 2,
  "gradient_accumulation_steps": 4,
  "contiguous_gradients": true,
  "sub_group_size": 1e9,
  "zero_allow_untested_optimizer": true,
  "zero_force_ds_cpu_optimizer": false,
  "zero_optimization": {
    "stage": 3,
    // Remove offload_param/offload_optimizer sections entirely:
    // Parameters and optimizer states remain on GPU, partitioned across GPUs.
    "allgather_partitions": true,
    "reduce_scatter": true,
    "overlap_comm": true,
    "contiguous_gradients": true,
    "memory_efficient_linear": true,
    // You can still tune these thresholds for intra-GPU memory management:
    "stage3_max_live_parameters": 5e7,
    "stage3_prefetch_bucket_size": 1e7,
    "stage3_param_persistence_threshold": 1e6
  },
  "fp16": {
    "enabled": true,
    "loss_scale": 0,
    "initial_scale_power": 16,
    "loss_scale_window": 1000,
    "min_loss_scale": 1
  },
  "gradient_clipping": 1.0,
  "activation_checkpointing": {
    "partition_activations": true,
    "cpu_checkpointing": false,
    "contiguous_memory_optimization": true,
    "number_checkpoints": 10,
    "synchronize_checkpoint_boundary": false,
    "profile": false
  },
  "scheduler": {
    "type": "CosineAnnealing",
    "params": {
      "T_max": 20
    }
  }
}
